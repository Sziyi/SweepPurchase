.container{
    display: flex;
    flex-direction: column;
  }
  .list{
    padding-bottom : 181rpx;
  }
  .settle-ment{
    background-color: yellow;
    position: fixed;
    bottom : 0; 
    left : 0; 
    right : 0;
  }
  .total-price{
    height : 80rpx;
    line-height: 80rpx;
    background-color: #fff;
    border: 1rpx solid #eee;
    padding : 0 20rpx;
    color : #ccc;
  }
  .total-price .price{
    margin-left: 10rpx;
    color : rgb(218, 66, 20);
  }
  .button-group{
    height : 100rpx;
    display: flex;
  }
  .button-group  view{
    flex : 1;
    display: flex;
    align-items: center;
    justify-content: center;
    color : #fff;
  }
  .add{
    background-color:  #f1b210f1;
  }
  .settle{
    background-color: rgb(233, 75, 12);
  }