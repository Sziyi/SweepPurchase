.top {
  height: 200rpx;
  background-color: orange;
  display: flex;
  align-items: center;
  padding: 0 30rpx 0 30rpx;
  background-image: linear-gradient(#eca813, #f7eba8);
  margin-bottom: 20rpx;
}

.top .img {
  width: 80rpx;
  height: 80rpx;
}

.r {
  flex: 1;
  margin-left: 20rpx;
  height: 200rpx;
  /* background-color: #fff; */
}

.name {
  padding: 42rpx 0 20rpx 0;
}

.balance text {
  color: #f60;
}

.wallet {
  height: 120rpx;
  background-color: #fff;
  display: flex;
  margin-bottom: 20rpx;
}
.le{
  display: flex;
}
.money {
  width: 60rpx;
  height: 60rpx;
  margin: 35rpx 20rpx 0 20rpx;
}

.myWallet {
  width: 600rpx;
  line-height: 120rpx;
  display: flex;
}

.myWallet .send {
  width: 100rpx;
  height: 50rpx;
  background-color: orangered;
  border-radius: 12%;
  margin: 20rpx 0 0 20rpx;
  position: relative;
}

.s {
  font-size: 30rpx;
  color: #fff;
  position: absolute;
  top: -33rpx;
  left: 6rpx;
}

.store{
  height: 120rpx;
  background-color: #fff;
  border-bottom: 1px solid rgb(230, 228, 228);
  display: flex;
  justify-content: space-between;
}
.order{
  line-height: 120rpx;
}
.arrow{
  width: 20rpx;
  height: 20rpx;
  border-bottom: 2rpx solid #ccc;
  border-right: 2rpx solid #ccc;
  transform: rotate(-45deg);
margin: 40rpx 10rpx 0 0;
}