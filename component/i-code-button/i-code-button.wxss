.main{
    flex : 1;
    display: flex;
    justify-content: center;
  }
  .main .qrcode-button{
    margin-top: 60rpx;
    width: 320rpx;
    height: 320rpx;
    background-color: #FEBE1B;
    border-radius: 50%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    border: 10px solid #FEE49B;
  }
  .main .qrcode-button image {
    width: 200rpx;
    height: 200rpx;
  }
  .main .qrcode-button text {
    color: #fff;
    margin-top: 5px;
    width: 180rpx;
    text-align: center;
  }