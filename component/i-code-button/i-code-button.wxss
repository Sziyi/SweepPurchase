.main{
    flex : 1;
    display: flex;
    justify-content: center;
  }
  .main .qrcode-button{
    margin-top: 60rpx;
    width: 320rpx;
    height: 320rpx;
    background-color: #FEBE1B;
    border-radius: 50%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    border: 10px solid #FEE49B;
    position: relative;
  }
  .main .qrcode-button image {
    width: 200rpx;
    height: 200rpx;
  }
  .main .qrcode-button text {
    color: #fff;
    margin-top: 5px;
    width: 180rpx;
    text-align: center;
  }
  .circle{
    position: absolute;
    min-width: 60rpx;
    min-height: 60rpx;
    right:44rpx;
    border-radius: 50%;
    top : 44rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f60;
    color : #fff;
  }